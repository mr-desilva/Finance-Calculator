                Label fv = new Label("Future value");
                fv.setLayoutX(20);
                fv.setLayoutY(255);

                //===============setting the text field editable option===================
                capital.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(true);
                        rate.setEditable(false);
                        period.setEditable(false);
                        future_Value.setEditable(false);
                    }
                });

                rate.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(true);
                        period.setEditable(false);
                        future_Value.setEditable(false);
                    }
                });

                period.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(false);
                        period.setEditable(true);
                        future_Value.setEditable(false);
                    }
                });

                future_Value.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(false);
                        period.setEditable(false);
                        future_Value.setEditable(true);
                    }
                });

                //custom keyboard
                TextField textField = new TextField();
                textField.setLayoutX(450);
                textField.setLayoutY(100);

                Button kFirst = new Button("1");
                kFirst.setLayoutX(480);
                kFirst.setLayoutY(150);
                Button kSecond = new Button("2");
                kSecond.setLayoutX(530);
                kSecond.setLayoutY(150);
                Button kThird = new Button("3");
                kThird.setLayoutX(580);
                kThird.setLayoutY(150);
                Button kFourth = new Button("4");
                kFourth.setLayoutX(480);
                kFourth.setLayoutY(200);
                Button kFifth = new Button("5");
                kFifth.setLayoutX(530);
                kFifth.setLayoutY(200);
                Button kSixth = new Button("6");
                kSixth.setLayoutX(580);
                kSixth.setLayoutY(200);
                Button kSeven = new Button("7");
                kSeven.setLayoutX(480);
                kSeven.setLayoutY(250);
                Button kEight = new Button("8");
                kEight.setLayoutX(530);
                kEight.setLayoutY(250);
                Button kNine = new Button("9");
                kNine.setLayoutX(580);
                kNine.setLayoutY(250);
                Button kZero = new Button("0");
                kZero.setLayoutX(530);
                kZero.setLayoutY(300);
                Button kDecimal = new Button(" . ");
                kDecimal.setLayoutX(480);
                kDecimal.setLayoutY(300);
                Button kErase = new Button("E");
                kErase.setLayoutX(580);
                kErase.setLayoutY(300);
                Button set = new Button("confirm");
                set.setLayoutX(510);
                set.setLayoutY(350);

                //Creating a pane for the mortgage
                Pane pane_mortgage = new Pane();
                pane_mortgage.getChildren().addAll(kFirst, kSecond, kThird, kFourth, kFifth,kSixth, kSeven, kEight, kNine, kZero, kDecimal, kErase,backButton,capital,rate,Period,future_Value,confirm,cap,rated,period,fv,textField,set);

                //Creating a new scene for the fixed mortgage calculator
                Scene scene_mortgage = new Scene(pane_mortgage, 800,600);

                //setting the primary stage scene to the fixed mortgage scene
                primaryStage.setScene(scene_mortgage);

                kFirst.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kFirst.getText());
                    }
                });

                kSecond.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kSecond.getText());
                    }
                });

                kThird.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kThird.getText());
                    }
                });

                kFourth.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kFourth.getText());
                    }
                });

                kFifth.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kFifth.getText());
                    }
                });

                kSixth.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kSixth.getText());
                    }
                });

                kSeven.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kSeven.getText());
                    }
                });

                kEight.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kEight.getText());
                    }
                });

                kNine.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kNine.getText());
                    }
                });

                kZero.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kZero.getText());
                    }
                });

                kDecimal.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kDecimal.getText());
                    }
                });

                kErase.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        if(!textField.getText().isEmpty()) {
                            textField.setText((textField.getText(0, textField.getLength() - 1)));
                        }
                    }
                });

                //setting the confirm button and auto detect the text field
                set.setOnAction(new EventHandler<ActionEvent>() {
                    @Override
                    public void handle(ActionEvent event) {
                        if(capital.isEditable()){
                            capital.setText(textField.getText());
                        } else if (rate.isEditable()){
                            rate.setText(textField.getText());
                        } else if (period.isEditable()){
                            period.setText((textField.getText()));
                        } else {
                            future_Value.setText(textField.getText());
                        }
                        textField.clear();
                    }
                });



                //adding the back button to get previous menu scene
                backButton.setOnAction(new EventHandler<ActionEvent>() {
                    @Override
                    public void handle(ActionEvent event) {
                        primaryStage.setScene(scene_main_menu);
                    }
                });
            }
        });
            }

            //=========================================================================================================

    public static void main(String[] args) {
        launch(args);
    }
}
