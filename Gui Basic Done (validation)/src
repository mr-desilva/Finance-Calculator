import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.Pane;
import javafx.stage.Stage;



public class test4 extends Application {

    @Override
    public void start(Stage primaryStage) throws Exception{

        //creating the main menu
        Button fixed_Deposit=new Button("Fixed Deposit");
        fixed_Deposit.setLayoutY(50);
        fixed_Deposit.setLayoutX(50);
        fixed_Deposit.setPrefWidth(130);

        Button savings=new Button("Savings");
        savings.setLayoutX(50);
        savings.setLayoutY(100);
        savings.setPrefWidth(130);

        Button loan=new Button("Loan");
        loan.setLayoutX(50);
        loan.setLayoutY(150);
        loan.setPrefWidth(130);

        Button mortgage=new Button("Mortgage");
        mortgage.setLayoutX(50);
        mortgage.setLayoutY(200);
        mortgage.setPrefWidth(130);


        Pane roots = new Pane();
        roots.setPrefSize(600,700);
        roots.getChildren().add(fixed_Deposit);
        roots.getChildren().add(savings);
        roots.getChildren().add(loan);
        roots.getChildren().add(mortgage);


        //creating the main menu scene
        Scene scene_main_menu = new Scene(roots,400,400);
        primaryStage.setScene(scene_main_menu);
        primaryStage.show();


        //======================Creating and calling the loan window===========================
        loan.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent event) {
                Button backButton = new Button("Back");
                backButton.setLayoutY(50);
                backButton.setLayoutX(550);

                TextField capital = new TextField();
                capital.setLayoutX(110);
                capital.setLayoutY(100);

                TextField rate = new TextField();
                rate.setLayoutX(110);
                rate.setLayoutY(150);

                TextField period = new TextField();
                period.setLayoutX(110);
                period.setLayoutY(200);

                TextField future_Value = new TextField();
                future_Value.setLayoutX(110);
                future_Value.setLayoutY(250);

                Button confirm = new Button("Calculate");
                confirm.setLayoutX(110);
                confirm.setLayoutY(300);

                Label cap = new Label("Capital");
                cap.setLayoutX(20);
                cap.setLayoutY(105);

                Label rated = new Label("Rate");
                rated.setLayoutX(20);
                rated.setLayoutY(155);

                Label Period = new Label("Period");
                Period.setLayoutX(20);
                Period.setLayoutY(205);

                Label fv = new Label("Future value");
                fv.setLayoutX(20);
                fv.setLayoutY(255);

                //===============setting the text field editable option===================
                capital.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(true);
                        rate.setEditable(false);
                        period.setEditable(false);
                        future_Value.setEditable(false);
                    }
                });

                rate.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(true);
                        period.setEditable(false);
                        future_Value.setEditable(false);
                    }
                });

                period.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(false);
                        period.setEditable(true);
                        future_Value.setEditable(false);
                    }
                });

                future_Value.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        capital.setEditable(false);
                        rate.setEditable(false);
                        period.setEditable(false);
                        future_Value.setEditable(true);
                    }
                });

                //custom keyboard
                TextField textField = new TextField();
                textField.setLayoutX(450);
                textField.setLayoutY(100);

                Button kFirst = new Button("1");
                kFirst.setLayoutX(480);
                kFirst.setLayoutY(150);
                Button kSecond = new Button("2");
                kSecond.setLayoutX(530);
                kSecond.setLayoutY(150);
                Button kThird = new Button("3");
                kThird.setLayoutX(580);
                kThird.setLayoutY(150);
                Button kFourth = new Button("4");
                kFourth.setLayoutX(480);
                kFourth.setLayoutY(200);
                Button kFifth = new Button("5");
                kFifth.setLayoutX(530);
                kFifth.setLayoutY(200);
                Button kSixth = new Button("6");
                kSixth.setLayoutX(580);
                kSixth.setLayoutY(200);
                Button kSeven = new Button("7");
                kSeven.setLayoutX(480);
                kSeven.setLayoutY(250);
                Button kEight = new Button("8");
                kEight.setLayoutX(530);
                kEight.setLayoutY(250);
                Button kNine = new Button("9");
                kNine.setLayoutX(580);
                kNine.setLayoutY(250);
                Button kZero = new Button("0");
                kZero.setLayoutX(530);
                kZero.setLayoutY(300);
                Button kDecimal = new Button(" . ");
                kDecimal.setLayoutX(480);
                kDecimal.setLayoutY(300);
                Button kErase = new Button("E");
                kErase.setLayoutX(580);
                kErase.setLayoutY(300);
                Button set = new Button("confirm");
                set.setLayoutX(510);
                set.setLayoutY(350);

                //Creating a pane for the loan
                Pane pane_loan = new Pane();
                pane_loan.getChildren().addAll(kFirst, kSecond, kThird, kFourth, kFifth,kSixth, kSeven, kEight, kNine, kZero, kDecimal, kErase,backButton,capital,rate,Period,future_Value,confirm,cap,rated,period,fv,textField,set);

                //Creating a new scene for the loan calculator
                Scene scene_loan = new Scene(pane_loan, 800,600);

                //setting the primary stage scene to the loan scene
                primaryStage.setScene(scene_loan);

                kFirst.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kFirst.getText());
                    }
                });

                kSecond.setOnMouseClicked(new EventHandler<MouseEvent>() {
                    @Override
                    public void handle(MouseEvent event) {
                        textField.appendText(kSecond.getText());
